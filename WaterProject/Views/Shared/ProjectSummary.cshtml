@{
}
@model Project

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-light p-1">
        <h4>@Model.ProjectName</h4>
        <span class="badge bg-info" style="float:right">
            Impact: @Model.ProjectImpact served
        </span>
    </div>


    <ul>
        <li>Project Type: @Model.ProjectType</li>
        <li>Regional Program: @Model.ProjectRegionalProgram</li>
        <li>Impact: @Model.ProjectImpact served</li>
        <li>Project Phase: @Model.ProjectPhase</li>
        <li>Project Status: @Model.ProjectFunctionalityStatus</li>

    </ul>
    <br />

    <form asp-page="/donate" method="post">

        <input type="hidden" asp-for="@Model.ProjectId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        
        <span class="card-text">
            <button type="submit" class="btn btn-success float-end">
                Donate
            </button>
        </span>
    </form>
</div>


