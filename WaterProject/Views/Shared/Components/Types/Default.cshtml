@{
}
@model IEnumerable<string>
<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-projectType="" asp-route-page_num="1" class="btn btn-outline-secondary">Home</a>


    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-projectType="@t" asp-route-page_num="1" class="btn @(ViewBag.SelectedType == t ? "btn-primary" : "btn-outline-secondary")">@t</a>
    }
</div>