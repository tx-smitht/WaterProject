@{

}

@model Donation

    <h2>Checkout Now</h2>
    <p>Please enter your details and we 
    will give your money to those who need
    them!</p>

    <form asp-action="Checkout" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <h4>Ship To</h4>
        <div class="form-group">
            <label asp-for="Name">Name:</label>
            <input autocomplete="given-name" class="form-control" asp-for="Name" />

            <h4>Address</h4>
            <div class="form-group">
                <label asp-for="AddressLine1">Address Line 1:</label>
                <input autocomplete="address-line1" asp-for="AddressLine1" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="AddressLine2">Address Line 2:</label>
                <input autocomplete="address-line2" asp-for="AddressLine2" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="AddressLine3">Address Line 3:</label>
                <input autocomplete="address-line3" asp-for="AddressLine3" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="City">City:</label>
                <input autocomplete="address-level2" asp-for="City" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="State">State:</label>
                <input autocomplete="address-level1" asp-for="State" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Zip">Zip:</label>
                <input autocomplete="postal-code" asp-for="Zip" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Country">Country:</label>
                <input autocomplete="country-name" asp-for="Country" class="form-control" />
            </div>
            <div class="checkbox">
                <label>
                    <input asp-for="Anonymous" /> Donate Anonymously
                </label>
            </div>
            <div class="float-end">
                <input type="submit" class="btn btn-primary" value="Submit Donation"/>
            </div>
        </div>
    </form>